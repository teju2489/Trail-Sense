        <div class="search">
            <input type="text" placeholder="entry city name"spellcheck="flase">
            <button><img src="C:\thejaswini\Stormclouds.jpg"></button>
        </div>
        <div class="weather">
            <img sc="C:\thejaswini\Stormclouds.jpg" class="weather-icon">
            <h1 class ="temp">22°C</h1>
            <h2 class="city">New York</h2>
            <div class="deails">
            <div class="col">
                <img src="C:\thejaswini\humidtity.png".>
                <div>
                    <p class="humidity">50%</p>
                    <p>humidiy</p>
                </div>
            </div>
            <div class="col">
                <img src="C:\thejaswini\wind.png".>
                <div>
                    <p class="wind">50%</p>
                    <p>wind speed</p>
                </div>
            </div>
        </div>
        </div>
